@using Entities.Concrete
@model List<ExchangeRates>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">CurrencyCode</th>
            <th scope="col">CurrencyName</th>
            <th scope="col">ForexBuying</th>
            <th scope="col">ForexSelling</th>
            <th scope="col">BanknoteBuying</th>
            <th scope="col">BanknoteSelling</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.CurrencyCode</th>
                <td>@item.CurrencyName</td>
                <td>@item.ForexBuying</td>
                <td>@item.ForexSelling</td>
                <td>@item.BanknoteBuying</td>
                <td>@item.BanknoteSelling</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Exchange/Update" class="btn btn-success">Güncelle</a>


